{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // base url is necessary for webpack tsconfig extension
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@atoms/*": ["stories/components/atoms/*"],
      "@helpers/*": ["stories/components/helpers/*"],
      "@molecules/*": ["stories/components/molecules/*"],
      "@organisms/*": ["stories/components/organisms/*"],
      "@templates/*": ["stories/components/templates/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
